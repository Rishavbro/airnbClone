<% layout('./layouts/boilerplate') -%>

<body>
    <!-- <form method="get" action="/listings/new">
        <button>create new</button>
    </form> -->
    <h3>ALL LISTING</h3>
   
    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">
        <%for(let listing of allListing){%>
            <a href="/listings/<%=listing._id%>" class="listing-link">
                <div class="card col listing-card" >
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="listing-image" style="height: 20rem;" >
                    <div class="card-img-overlay">
                        <!-- <h5 class="card-title"></h5>
                        <p class="card-text"></p>
                        <p class="card-text"></p> -->
                      </div>
                    <div class="card-body">
                      <b><p class="card-text"><%= listing.title %></p></b> 
                      <p>&#8377;<%= listing.price.toLocaleString("en-In") %>/night</p>
                    </div>
                  </div>
              <%}%>
            </a>
           
    </div>
   
    
      

</body>
