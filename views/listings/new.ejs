<% layout('/layouts/boilerplate') -%>
<body>
    <br>
    <h3>ADD New Listings</h3>
    <div class="row">
    <div class="col-8 offset-2">
    <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" id="title" class="form-control" required placeholder="Add catchy title">
            <div class="valid-feedback">
              Title Looks good!
              </div>
              <div class="invalid-feedback">
                Titel is required
               </div>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" class="form-control" required placeholder="Add Description"></textarea> 
            <div class="invalid-feedback">
                Write a short description
              </div>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Upload new Image</label>
            <input type="file" name="listing[image]" class="form-control" placeholder="Add imlage link/url" required>
        </div>
        
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input  name="listing[price]" class="form-control" required placeholder="Add price" > 
                <div class="invalid-feedback">
                    please enter price
                  </div>
            </div>
    
            <div class="mb-3 col-md-8">
                <label for="price" class="form-label">Location</label>
                <input type="text" name="listing[location]" class="form-control" required placeholder="Jaipur,Rajasthan"> 
                <div class="invalid-feedback">
                   Location required
                  </div>
            </div>
           
            <div class="mb-3">
                <label for="price" class="form-label">Country</label>
                <input type="text" name="listing[country]" class="form-control" required placeholder="India"> 
                <div class="invalid-feedback">
                   valid country is required
                  </div>
            </div>
        </div>
       <button class="btn btn-dark add-btn">ADD</button>
    </form>
    <br><br>
</div>
</div>
</body>
